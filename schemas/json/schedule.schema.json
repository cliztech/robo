{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://robodj/contracts/schedule.schema.json",
  "title": "Schedule",
  "description": "Programming ruleset that controls what content should air in a time window.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0.0"
    },
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "timezone": {
      "type": "string",
      "minLength": 1
    },
    "start_time": {
      "type": "string",
      "format": "date-time"
    },
    "end_time": {
      "type": "string",
      "format": "date-time"
    },
    "clock_wheel": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "offset_seconds": {
            "type": "integer",
            "minimum": 0
          },
          "slot_type": {
            "type": "string",
            "enum": [
              "station_id",
              "track",
              "voice_link",
              "ad",
              "jingle"
            ]
          },
          "target": {
            "type": "string",
            "minLength": 1
          }
        },
        "required": [
          "offset_seconds",
          "slot_type"
        ]
      }
    },
    "active": {
      "type": "boolean"
    }
  },
  "required": [
    "schema_version",
    "id",
    "name",
    "timezone",
    "clock_wheel",
    "active"
  ]
}
