{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://robodj.local/contracts/frontend_responses/frontend_status_response.schema.json",
  "title": "frontend_status_response",
  "type": "object",
  "additionalProperties": false,
  "required": ["service_health", "queue_depth", "rotation", "alert_center"],
  "required": [
    "service_status",
    "queue_depth",
    "last_rotation_at",
    "last_error_message",
    "degraded_reason",
    "latency_ms",
    "pending_jobs",
    "panel_states"
  ],
  "properties": {
    "service_health": {
      "type": "object",
      "additionalProperties": false,
      "required": ["status", "reason", "observed_at"],
      "properties": {
        "status": {
          "type": "string",
          "enum": ["healthy", "degraded", "offline"]
        },
        "reason": {
          "type": "string",
          "minLength": 1
        },
        "observed_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "status_message": {
      "type": "string",
      "maxLength": 160,
      "description": "Optional operator-approved message safe for direct UI display. Must not include internal diagnostics, stack traces, or secret identifiers."
    },
    "degraded_reason_code": {
      "type": "string",
      "enum": [
        "upstream_latency",
        "content_backlog",
        "scheduled_maintenance",
        "partial_outage"
      ],
      "description": "Optional frontend-safe reason code for degraded/offline states."
    },
    "queue_depth": {
      "type": "object",
      "additionalProperties": false,
      "required": ["current_depth", "trend", "thresholds", "state"],
      "properties": {
        "current_depth": {
          "type": "integer",
          "minimum": 0
        },
        "trend": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["timestamp", "depth"],
            "properties": {
              "timestamp": {
                "type": "string",
                "format": "date-time"
              },
              "depth": {
                "type": "integer",
                "minimum": 0
              }
            }
          }
        },
        "thresholds": {
          "type": "object",
          "additionalProperties": false,
          "required": ["warning", "critical"],
          "properties": {
            "warning": {
              "type": "integer",
              "minimum": 0
            },
            "critical": {
              "type": "integer",
              "minimum": 0
            }
          }
        },
        "state": {
          "type": "string",
          "enum": ["info", "warning", "critical"]
        }
      }
    },
    "rotation": {
      "type": "object",
      "additionalProperties": false,
      "required": ["last_successful_rotation_at", "stale_after_minutes", "is_stale"],
      "properties": {
        "last_successful_rotation_at": {
          "type": "string",
          "format": "date-time"
        },
        "stale_after_minutes": {
          "type": "integer",
          "minimum": 1
        },
        "is_stale": {
          "type": "boolean"
        },
        "stale_reason": {
          "type": ["string", "null"]
        }
      }
    },
    "alert_center": {
      "type": "object",
      "additionalProperties": false,
      "required": ["filters", "items"],
      "properties": {
        "filters": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["critical", "warning", "info"]
          },
          "uniqueItems": true
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "alert_id",
              "severity",
              "title",
              "description",
              "created_at",
              "acknowledged"
            ],
            "properties": {
              "alert_id": {
                "type": "string",
                "minLength": 1
              },
              "severity": {
                "type": "string",
                "enum": ["critical", "warning", "info"]
              },
              "title": {
                "type": "string",
                "minLength": 1
              },
              "description": {
                "type": "string",
                "minLength": 1
              },
              "created_at": {
                "type": "string",
                "format": "date-time"
              },
              "acknowledged": {
                "type": "boolean"
              },
              "acknowledged_at": {
                "type": ["string", "null"],
                "format": "date-time"
              }
            }
          }
        }
      }
    },
    "service_status": {
      "type": "string",
      "enum": ["healthy", "degraded", "offline"],
      "deprecated": true
    },
    "data_freshness_seconds": {
      "type": "integer",
      "minimum": 0,
      "maximum": 86400,
      "description": "Optional staleness indicator for currently displayed status data."
    },
    "next_retry_at": {
      "type": "string",
      "format": "date-time",
      "description": "Optional ISO-8601 timestamp indicating when the frontend should try refreshing status again."
    },
    "last_rotation_at": {
      "type": "string",
      "format": "date-time",
      "deprecated": true
      "format": "date-time"
    },
    "status_reason_code": {
      "type": "string",
      "enum": [
        "none",
        "startup_recovery",
        "generation_backlog",
        "upstream_timeout",
        "network_unavailable",
        "maintenance_mode",
        "manual_pause"
      ]
    },
    "status_message": {
      "type": "string",
      "maxLength": 160,
      "description": "Short user-safe diagnostic text. Do not include secrets, file paths, tokens, hostnames, or raw provider errors."
    },
    "fallback_mode_active": {
      "type": "boolean"
    },
    "next_recovery_check_at": {
      "type": "string",
      "format": "date-time"
    },
    "last_successful_generation_at": {
      "type": "string",
      "format": "date-time"
    "last_error_message": {
      "type": ["string", "null"]
    },
    "degraded_reason": {
      "type": ["string", "null"]
    },
    "latency_ms": {
      "type": "integer",
      "minimum": 0
    },
    "pending_jobs": {
      "type": "integer",
      "minimum": 0
    },
    "panel_states": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "scheduler",
        "queue",
        "alerts",
        "diagnostics",
        "autonomy_panel"
      ],
      "properties": {
        "scheduler": { "$ref": "#/$defs/ui_state" },
        "queue": { "$ref": "#/$defs/ui_state" },
        "alerts": { "$ref": "#/$defs/ui_state" },
        "diagnostics": { "$ref": "#/$defs/ui_state" },
        "autonomy_panel": { "$ref": "#/$defs/ui_state" }
      }
    },
    "card_states": {
      "type": "object",
      "description": "Optional map of card identifiers to standardized UI states.",
      "additionalProperties": {
        "$ref": "#/$defs/ui_state"
      }
    }
  },
  "$defs": {
    "ui_state": {
      "type": "string",
      "enum": ["loading", "ready", "empty", "error"]
    }
  }
}
