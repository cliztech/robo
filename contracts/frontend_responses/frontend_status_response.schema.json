{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://robodj.local/contracts/frontend_responses/frontend_status_response.schema.json",
  "title": "frontend_status_response",
  "type": "object",
  "additionalProperties": false,
  "required": ["service_health", "queue_depth", "rotation", "alert_center"],
  "properties": {
    "service_health": {
      "type": "object",
      "additionalProperties": false,
      "required": ["status", "reason", "observed_at"],
      "properties": {
        "status": {
          "type": "string",
          "enum": ["healthy", "degraded", "offline"]
        },
        "reason": {
          "type": "string",
          "minLength": 1
        },
        "observed_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "queue_depth": {
      "type": "object",
      "additionalProperties": false,
      "required": ["current_depth", "trend", "thresholds", "state"],
      "properties": {
        "current_depth": {
          "type": "integer",
          "minimum": 0
        },
        "trend": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["timestamp", "depth"],
            "properties": {
              "timestamp": {
                "type": "string",
                "format": "date-time"
              },
              "depth": {
                "type": "integer",
                "minimum": 0
              }
            }
          }
        },
        "thresholds": {
          "type": "object",
          "additionalProperties": false,
          "required": ["warning", "critical"],
          "properties": {
            "warning": {
              "type": "integer",
              "minimum": 0
            },
            "critical": {
              "type": "integer",
              "minimum": 0
            }
          }
        },
        "state": {
          "type": "string",
          "enum": ["info", "warning", "critical"]
        }
      }
    },
    "rotation": {
      "type": "object",
      "additionalProperties": false,
      "required": ["last_successful_rotation_at", "stale_after_minutes", "is_stale"],
      "properties": {
        "last_successful_rotation_at": {
          "type": "string",
          "format": "date-time"
        },
        "stale_after_minutes": {
          "type": "integer",
          "minimum": 1
        },
        "is_stale": {
          "type": "boolean"
        },
        "stale_reason": {
          "type": ["string", "null"]
        }
      }
    },
    "alert_center": {
      "type": "object",
      "additionalProperties": false,
      "required": ["filters", "items"],
      "properties": {
        "filters": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["critical", "warning", "info"]
          },
          "uniqueItems": true
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "alert_id",
              "severity",
              "title",
              "description",
              "created_at",
              "acknowledged"
            ],
            "properties": {
              "alert_id": {
                "type": "string",
                "minLength": 1
              },
              "severity": {
                "type": "string",
                "enum": ["critical", "warning", "info"]
              },
              "title": {
                "type": "string",
                "minLength": 1
              },
              "description": {
                "type": "string",
                "minLength": 1
              },
              "created_at": {
                "type": "string",
                "format": "date-time"
              },
              "acknowledged": {
                "type": "boolean"
              },
              "acknowledged_at": {
                "type": ["string", "null"],
                "format": "date-time"
              }
            }
          }
        }
      }
    },
    "service_status": {
      "type": "string",
      "enum": ["healthy", "degraded", "offline"],
      "deprecated": true
    },
    "last_rotation_at": {
      "type": "string",
      "format": "date-time",
      "deprecated": true
    }
  }
}
