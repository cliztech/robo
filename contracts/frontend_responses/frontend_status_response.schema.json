{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://robodj.local/contracts/frontend_responses/frontend_status_response.schema.json",
  "title": "frontend_status_response",
  "type": "object",
  "additionalProperties": false,
  "required": ["service_status", "queue_depth", "last_rotation_at"],
  "properties": {
    "service_status": {
      "type": "string",
      "enum": ["healthy", "degraded", "offline"]
    },
    "queue_depth": {
      "type": "integer",
      "minimum": 0
    },
    "last_rotation_at": {
      "type": "string",
      "format": "date-time"
    },
    "status_reason_code": {
      "type": "string",
      "enum": [
        "none",
        "startup_recovery",
        "generation_backlog",
        "upstream_timeout",
        "network_unavailable",
        "maintenance_mode",
        "manual_pause"
      ]
    },
    "status_message": {
      "type": "string",
      "maxLength": 160,
      "description": "Short user-safe diagnostic text. Do not include secrets, file paths, tokens, hostnames, or raw provider errors."
    },
    "fallback_mode_active": {
      "type": "boolean"
    },
    "next_recovery_check_at": {
      "type": "string",
      "format": "date-time"
    },
    "last_successful_generation_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
