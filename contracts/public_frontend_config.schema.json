{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://robodj.local/contracts/public_frontend_config.schema.json",
  "title": "public_frontend_config",
  "description": "Frontend-safe configuration contract. Must contain only non-sensitive settings suitable for web clients.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "station",
    "ui",
    "features"
  ],
  "properties": {
    "station": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "display_name",
        "time_zone"
      ],
      "properties": {
        "display_name": { "type": "string" },
        "tagline": { "type": "string" },
        "time_zone": { "type": "string" }
      }
    },
    "ui": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "preferences",
        "module_visibility"
      ],
      "properties": {
        "theme": {
          "type": "string",
          "enum": ["light", "dark", "auto"]
        },
        "show_weather_widget": { "type": "boolean" },
        "refresh_interval_seconds": {
          "type": "integer",
          "minimum": 5,
          "maximum": 300
        },
        "preferences": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "density",
            "font_scale",
            "reduced_motion",
            "preferred_layout"
          ],
          "properties": {
            "density": {
              "type": "string",
              "enum": ["compact", "comfortable", "spacious"]
            },
            "font_scale": {
              "type": "number",
              "minimum": 0.8,
              "maximum": 1.5
            },
            "reduced_motion": { "type": "boolean" },
            "preferred_layout": {
              "type": "string",
              "enum": ["auto", "single_column", "two_column", "focus"]
            }
          }
        },
        "module_visibility": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "scheduler",
            "queue",
            "alerts",
            "diagnostics",
            "autonomy_panel"
          ],
          "properties": {
            "scheduler": { "type": "boolean" },
            "queue": { "type": "boolean" },
            "alerts": { "type": "boolean" },
            "diagnostics": { "type": "boolean" },
            "autonomy_panel": { "type": "boolean" }
          }
        }
      }
    },
    "features": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enable_request_queue": { "type": "boolean" },
        "enable_now_playing": { "type": "boolean" }
      }
    }
  }
}
