{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://robodj.local/contracts/public_frontend_config.schema.json",
  "title": "public_frontend_config",
  "description": "Frontend-safe configuration contract. Must contain only non-sensitive settings suitable for web clients.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "station",
    "ui",
    "features"
  ],
  "properties": {
    "station": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "display_name",
        "time_zone"
      ],
      "properties": {
        "display_name": {
          "type": "string"
        },
        "tagline": {
          "type": "string"
        },
        "time_zone": {
          "type": "string"
        }
      }
    },
    "ui": {
      "type": "object",
      "additionalProperties": false,
      "description": "Optional appearance and behavior controls consumed by browser clients. All appearance fields are optional and include defaults for backwards compatibility.",
      "properties": {
        "theme": {
          "type": "string",
          "enum": [
            "light",
            "dark",
            "auto"
          ],
          "default": "auto",
          "description": "Base color-scheme mode selector."
        },
        "accent_color": {
          "type": "string",
          "pattern": "^#[A-Fa-f0-9]{6}$",
          "default": "#2AA9FF",
          "description": "Primary brand/accent color in 6-digit hex form."
        },
        "density": {
          "type": "string",
          "enum": [
            "comfortable",
            "compact"
          ],
          "default": "comfortable",
          "description": "Controls spacing density for shell layout and controls."
        },
        "font_scale": {
          "type": "number",
          "minimum": 0.9,
          "maximum": 1.25,
          "multipleOf": 0.05,
          "default": 1,
          "description": "Global typography scale multiplier used by frontend token mapping."
        },
        "surface_style": {
          "type": "string",
          "enum": [
            "flat",
            "elevated"
          ],
          "default": "elevated",
          "description": "Optional surface rendering mode for cards/panels."
        },
        "show_weather_widget": {
          "type": "boolean"
        },
        "refresh_interval_seconds": {
          "type": "integer",
          "minimum": 5,
          "maximum": 300
        },
        "tokens": {
          "type": "object",
          "additionalProperties": false,
          "description": "Semantic UI token overrides for supported clients.",
          "properties": {
            "primary_color": {
              "type": "string",
              "pattern": "^#[A-Fa-f0-9]{6}$",
              "default": "#2B6CB0"
            },
            "accent_color": {
              "type": "string",
              "pattern": "^#[A-Fa-f0-9]{6}$",
              "default": "#D69E2E"
            },
            "surface_style": {
              "type": "string",
              "enum": [
                "flat",
                "elevated",
                "glass"
              ],
              "default": "flat"
            },
            "density": {
              "type": "string",
              "enum": [
                "comfortable",
                "compact"
              ],
              "default": "comfortable"
            },
            "corner_radius_scale": {
              "type": "number",
              "minimum": 0,
              "maximum": 2,
              "default": 1
            },
            "font_stack": {
              "type": "string",
              "enum": [
                "system_ui",
                "humanist",
                "neo_grotesk",
                "serif"
              ],
              "default": "system_ui"
            }
          }
        }
      }
    },
    "features": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enable_request_queue": {
          "type": "boolean"
        },
        "enable_now_playing": {
          "type": "boolean"
        }
      }
    }
  }
}
