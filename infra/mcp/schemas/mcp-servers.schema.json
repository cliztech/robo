{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "DGN-DJ MCP Server Index",
  "type": "object",
  "required": ["version", "project", "servers"],
  "properties": {
    "version": { "type": "string", "minLength": 1 },
    "project": { "type": "string", "const": "dgn-dj" },
    "servers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "manifest"],
        "properties": {
          "id": { "type": "string", "pattern": "^[a-z0-9-]+$" },
          "manifest": { "type": "string", "pattern": "^\\./.+\\.server\\.json$" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
